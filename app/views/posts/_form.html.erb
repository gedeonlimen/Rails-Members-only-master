<div class="custom__container">
        <%= form_with(model: post, local: true) do|f| %>

            <div class="wrapper">
                <%= f.label :title %>
                <%= f.text_field :title %>

                <%= f.label :description %>
                <%= f.text_area :description, rows: 5 %>

                <%= f.label :name %>
                <%= f.text_field :name %>

                <%= f.label :published_at  %>
                <div class="datetime__container">
                <%= f.datetime_select :published_at, {ampm: true }, {class:"datetime"} %>
            </div>
            <%= f.submit %>
            <%= link_to "Back", posts_path, class: "back__link" %>

        <% end %>
    </div>
</div>
